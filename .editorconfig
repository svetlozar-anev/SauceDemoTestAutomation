# .editorconfig - Enables XML comment rules and common StyleCop formatting
root = true

[*.cs]

#############################################
# StyleCop Analyzer Rules - Enable XML Docs
#############################################

# Allow StyleCop to analyze XML comments (fixes SA0001)
dotnet_diagnostic.SA0001.severity = none
dotnet_diagnostic.SA1101.severity = none

#############################################
# Rider / Code Style - Fully Qualified Names
#############################################

# Keep explicit qualification for fields, properties, methods, and events
dotnet_style_qualification_for_field = true:none
dotnet_style_qualification_for_property = true:none
dotnet_style_qualification_for_method = true:none
dotnet_style_qualification_for_event = true:none

# Disable Rider redundant qualifier inspection
resharper_redunqualifier_severity = none